extends ../../views/layout

block content
  .row
    .six.columns
      - if (typeof msg !== "undefined")
        .alert-box.success #{msg}
  .row
    .six.columns
      form(action="/users/me/edit", method="POST")
        input(type='hidden', name='_csrf', value='#{csrftoken}')
        h3.subheader View Profile
        h5.subheader ID:
        input(type="text", value="#{user.id}", disabled)
        h5.subheader Username:
        input(type="text", name="username", value="#{user.username}")
        h5.subheader First name:
        input(type="text", name="firstname", value="#{user.firstname}")
        h5.subheader Last name:
        input(type="text", name="lastname", value="#{user.lastname}")
        h5.subheader Email:
        input(type="text", name="email", value="#{user.email}")
        h5.subheader Password:
        input(type="password", name="password", placeholder="New password")
        input(type="password", placeholder="Confirm password")
        br
        input.button(type="submit") Submit