!!! 5
html(lang="en")
  head
    title TEN Console
    meta(charset="utf-8")
    meta(http-equiv="X-UA-Compatible", content="IE=edge,chrome=1")
    meta(name="description", content="The Engineering Network, Digital Signage")
    meta(name="viewport", content="width=device-width")
    block head
      //- link(href="//netdna.bootstrapcdn.com/twitter-bootstrap/2.2.1/css/bootstrap.min.css", rel="stylesheet")
      link(href="//cdnjs.cloudflare.com/ajax/libs/foundation/4.0.9/css/foundation.min.css", rel="stylesheet")
      link(href="/css/style.css", rel="stylesheet")
  body
    nav.top-bar.fixed
      ul.title-area
        li.name
          h1
            - if (!user)
              a(href='/') TEN Console
            - else
              a(href='/console') TEN Console
        li.toggle-topbar
          a(href="#")
      section.top-bar-section
        ul.left
          li.divider
          li
            a(href='/organizations') Organizations
          li.divider
          li
            a(href='/locations') Locations
          li.divider
          li
            a(href='/slides') Slides
          li.divider
          li
            a(href='/api') API Documentation
          li.divider
        ul.right
          - if (!user)
            li.divider
            li
              a(href='/register') Register
            li.divider
            li
              a(href='/login') Login
          - else
            li.divider
            li.has-dropdown
              a
                span= user.username
              ul.dropdown
                li
                  label Settings
                li
                  a(href='/users/me') View Your Profile
                  a(href='/users/me/edit') Edit Your Profile
                li.divider
                li
                  a(href='/logout') Logout
            li.divider

    // Content
    block content

    //- .row.panel
      #{user}

    // Dependencies
    block scripts
      //- script(src="https://ajax.googleapis.com/ajax/libs/jquery/1.7.2/jquery.min.js")
      script(src="//cdnjs.cloudflare.com/ajax/libs/foundation/4.0.9/js/vendor/zepto.js")
      script(src="//cdnjs.cloudflare.com/ajax/libs/foundation/4.0.9/js/vendor/custom.modernizr.js")
      script(src="//cdnjs.cloudflare.com/ajax/libs/foundation/4.0.9/js/foundation.min.js")
      script(src="//cdnjs.cloudflare.com/ajax/libs/foundation/4.0.9/js/foundation/foundation.tooltips.js")

      script
        $(document).foundation();